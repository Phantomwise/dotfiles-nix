bindsym $mod+F12 exec 'grim -t png $(xdg-user-dir PICTURES)/Screenshots/Screenshot_$(date +'%Y-%m-%d_%H-%M-%S').png'

# Screenshot active window to file named 'screenshot_date&hour_windowclass.png'
